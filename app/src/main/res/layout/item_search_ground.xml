<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_margin_left_right_main"
        android:layout_marginLeft="@dimen/size_margin_left_right_main"
        android:layout_marginRight="@dimen/size_margin_left_right_main"
        android:layout_marginTop="@dimen/size_margin_left_right_main"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:text="Tim gap nguoi thu mon"
                android:textColor="#174dea"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/star_normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_name_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Nguyen Van A dang luc 3h ngay 22/1/2017"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/football_16" />

                <TextView
                    android:id="@+id/tv_name_football_ground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_margin_left_right_main"
                    android:text="San bong La Thanh"
                    android:textColor="@color/color_infor_content"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone16" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_margin_left_right_main"
                    android:text="0954324178"
                    android:textColor="@color/color_infor_content"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/placeholder16" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_margin_left_right_main"
                android:text="Ba Dinh - Ha Noi"
                android:textColor="@color/color_infor_content"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time16" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_margin_left_right_main"
                android:text="5h30'-7h-23/4/2017"
                android:textColor="@color/color_infor_content"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="fsgsdfasdgsdgasgasdfwa"
            android:textColor="#000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.tungmai.footballfiled.main.customevent.TouchHighlightImageButton
                android:id="@+id/iv_tab_image_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_image_tablayout"
                android:scaleType="center" />

            <com.example.tungmai.footballfiled.main.customevent.TouchHighlightImageButton
                android:id="@+id/iv_tab_image_1_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_image_tablayout"
                android:layout_marginTop="@dimen/size_margin_top_main_image"
                android:scaleType="center" />

            <LinearLayout
                android:id="@+id/iv_tab_image_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_image_tablayout"
                android:layout_marginTop="@dimen/size_margin_top_main_image"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.example.tungmai.footballfiled.main.customevent.TouchHighlightImageButton
                    android:id="@+id/iv_tab_image_2_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_margin_tab_image"
                    android:layout_weight="1"
                    android:scaleType="center" />

                <com.example.tungmai.footballfiled.main.customevent.TouchHighlightImageButton
                    android:id="@+id/iv_tab_image_2_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_margin_tab_image"
                    android:layout_weight="1"
                    android:scaleType="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/iv_tab_image_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_image_tablayout"
                android:layout_marginTop="@dimen/size_margin_top_main_image"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.example.tungmai.footballfiled.main.customevent.TouchHighlightImageButton
                    android:id="@+id/iv_tab_image_3_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_margin_tab_image"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <com.example.tungmai.footballfiled.main.customevent.TouchHighlightImageButton
                    android:id="@+id/iv_tab_image_3_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_margin_tab_image"
                    android:layout_marginRight="@dimen/size_margin_tab_image"
                    android:layout_weight="1"
                    android:scaleType="center" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_margin_tab_image"
                    android:layout_weight="1">

                    <com.example.tungmai.footballfiled.main.customevent.TouchHighlightImageButton
                        android:id="@+id/iv_tab_image_3_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center" />

                    <com.example.tungmai.footballfiled.main.customevent.TouchHighlightImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>